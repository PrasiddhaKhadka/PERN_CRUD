{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true,
    "types": ["node"],

    "sourceMap": true,
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "include":["src/**/*"],
  "exclude": ["node_modules", "dist", "prisma"]
}
